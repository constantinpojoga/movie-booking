<div class="container">
  <div class="row">

  <p id="notice"><%= notice %></p>

    <div class="col-sm-3 ">
      <img class="img-responsive" src="<%= @ticket.show.movie.img %>">
      
    </div>

    <div class="col-sm-9">
      <h3>
        <strong>Movie: </strong> 
        <%= @ticket.show.movie.name %>
      </h3>

      <h4>
        <strong>Auditorium: </strong> 
        <span style="color:<%= @ticket.show.auditorium.name %>"><%= @ticket.show.auditorium.name %></span>
      </h4>

      <h4>
        <strong>Name: </strong> 
        <%= @ticket.name %>
      </h4>

      <h4>
        <strong>Email address:</strong> 
        <%= @ticket.email_address %>
      </h4>

      <h4>
        <strong>Date/Time:</strong>
        <%= @ticket.show.start_datetime.strftime("%b %d, %Y at %I:%M%P") %>
      </h4>

      <h4>
        <strong>Seat row:</strong> 
        <%= @ticket.seat_row %>. 
        <strong>Seat number:</strong> 
        <%= @ticket.seat_number %>.
      </h4>   

    </div>
  </div>
  <hr />

  <%= link_to 'Back', tickets_path, {:class => "btn btn-info"} %>
</div>
