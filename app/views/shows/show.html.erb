<div class="container">

  <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col-sm-4">
      <img class="img-responsive show-big-img" src="<%= @show.movie.img %>">
    </div>

    <div class="col-sm-8">
      <h3>
        <strong>Movie:</strong>
        <%= @show.movie.name %>
      </h3>

       <p>
        <strong>About:</strong>
        <%= @show.movie.about %>
      </p>

      <p>
        <strong>Auditorium:</strong>
        <span style="color:<%= @show.auditorium.name.downcase %>;"><%= @show.auditorium.name %></span>
      </p>

      <p>
        <strong>Time:</strong>
        <%= @show.start_datetime.strftime("%b %d, %Y from %I:%M%P to ") %>
        <%= @show.end_datetime.strftime(" %I:%M%P") %>
      </p>
      <%= link_to 'Buy Ticket For This Show!', new_ticket_path(:show_id => @show.id), {:class => "btn btn-success"}  %>
      
    </div>
  </div>
  <hr />
  <%= link_to 'Edit', edit_show_path(@show), {:class => "btn btn-info"}  %> 
  <%= link_to 'Back', shows_path, {:class => "btn btn-info"} %>
      
</div>

