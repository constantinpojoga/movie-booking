<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-sm-4">
      <img class="img-responsive show-big-img" src="<%= @movie.img %>">
    </div>

    <h3>
      <strong>Name:</strong>
      <%= @movie.name %>
    </h3>

    <p>
      <strong>About:</strong>
      <%= @movie.about %>
    </p>

    <p>
      <strong>Length:</strong>
      <%= @movie.length %>  min.

      <%= link_to 'Edit', edit_movie_path(@movie), {:class => "btn btn-xs btn-default"}  %>

      <%= link_to 'Destroy', @movie, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-xs btn-default" %></p>  
      
    </p>
    <br />
    <h3>All shows for this movie:</h3>
    <hr />

    <% if @shows.length > 0 %>
      <% @shows.each do |show| %> 
        <h3> 
          <%= link_to show do %>
            <strong>
              <%= show.id %>.  
              Auditorium
              <span style="color:<%= show.auditorium.name.downcase%>;">
                <%= show.auditorium.name%>
              </span>
            </strong> 
            <small>
              - on <%= show.start_datetime.strftime("%b %d, %Y, at %I:%M%P") %>
            </small>  
          <% end %>  
          <%= link_to 'Buy Ticket ', new_ticket_path(:show_id => show.id), {:class => "btn btn-sm btn-success"}  %>
        </h3>
      <% end %> 
    <% else %> 
       <p>There are no shows for this movie. Please turn back later.</p>
    <% end %>
      

  </div>
  <hr />
 
  <%= link_to 'Back', movies_path, {:class => "btn btn-info"}  %>

</div>
