<p id="notice"><%= notice %></p>

<h1>Auditoria</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Seat rows</th>
      <th>Seats per row</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @auditoria.each do |auditorium| %>
      <tr>
        <td><%= auditorium.name %></td>
        <td><%= auditorium.seat_rows %></td>
        <td><%= auditorium.seats_per_row %></td>
        <td><%= link_to 'Show', auditorium %></td>
        <td><%= link_to 'Edit', edit_auditorium_path(auditorium) %></td>
        <td><%= link_to 'Destroy', auditorium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

