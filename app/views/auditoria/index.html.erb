<div class="container">
  <p id="notice"><%= notice %></p>

    <h1>Auditoriums:</h1>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Rows</th>
            <th>Seats/row</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @auditoria.each do |auditorium| %>
            <tr>
              <td style="color:<%= auditorium.name %>;"><%= auditorium.name %></td>
              <td><%= auditorium.seat_rows %></td>
              <td><%= auditorium.seats_per_row %></td>
              <td>
                <%= link_to 'Edit', edit_auditorium_path(auditorium), {:class => "btn btn-xs btn-default"} %>
                <%= link_to 'Destroy', auditorium, method: :delete, data: { confirm: 'Are you sure to delete the auditorium?' }, :class => "btn btn-xs btn-default" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>

    <hr />
    <%= link_to 'New Auditorium', new_auditorium_path, {:class => "btn btn-info"}  %>
</div>
